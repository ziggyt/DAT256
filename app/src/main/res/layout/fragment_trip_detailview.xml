<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.muk.sami.SearchTripFragment">


    <TextView
        android:id="@+id/textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/navigation_trip_detailview"
        android:textColor="@color/browser_actions_text_color"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textview_from"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_title"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="190dp"
        android:layout_toEndOf="@+id/from"
        android:text="@string/placeholder"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textview_to"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_from"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="190dp"
        android:layout_toEndOf="@+id/to"
        android:text="@string/placeholder"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textview_date"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bookTripButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="105dp"
        android:text="@string/placeholder"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textview_time"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bookTripButton"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="108dp"
        android:layout_toEndOf="@+id/textview_date"
        android:text="@string/placeholder"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/to"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/from"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="55dp"
        android:text="@string/to" />

    <TextView
        android:id="@+id/from"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:text="@string/from" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textview_date"
        android:layout_alignStart="@+id/textview_date"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="12dp"
        android:text="@string/date" />

    <TextView
        android:id="@+id/time"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textview_time"
        android:layout_alignStart="@+id/textview_time"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="8dp"
        android:text="@string/time" />

    <Button
        android:id="@+id/bookTripButton"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="118dp"
        android:layout_marginEnd="122dp"
        android:layout_marginBottom="49dp"
        android:text="@string/book_trip" />
</RelativeLayout>