<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.muk.sami.SearchTripFragment">


    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/navigation_trip_detailview"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/from_text_view"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_text_view"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="190dp"
        android:layout_toEndOf="@+id/from"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Gothenburg" />

    <TextView
        android:id="@+id/to_text_view"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/from_text_view"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="190dp"
        android:layout_toEndOf="@+id/to"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Stockholm" />

    <TextView
        android:id="@+id/date_text_view"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:layout_alignStart="@+id/date"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="12-05-2019" />

    <TextView
        android:id="@+id/time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:layout_alignStart="@+id/time"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="08:48" />

    <TextView
        android:id="@+id/to"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/from"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="38dp"
        android:text="@string/to" />

    <TextView
        android:id="@+id/from"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_text_view"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:text="@string/from" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/to_text_view"
        android:layout_alignStart="@+id/to_text_view"
        android:layout_marginStart="0dp"
        android:layout_marginTop="30dp"
        android:text="@string/date" />

    <TextView
        android:id="@+id/time"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/to_text_view"
        android:layout_marginStart="58dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/date_text_view"
        android:text="@string/time" />

    <Button
        android:id="@+id/book_trip_button"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="118dp"
        android:layout_marginEnd="122dp"
        android:layout_marginBottom="25dp"
        android:text="@string/book_trip" />

    <Button
        android:id="@+id/show_qr_code_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignBottom="@+id/to_text_view"
        android:layout_marginEnd="-92dp"
        android:layout_marginBottom="73dp"
        android:text="@string/show_qr_code_string" />

    <Button
        android:id="@+id/cancel_trip_button"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="118dp"
        android:layout_marginEnd="122dp"
        android:layout_marginBottom="25dp"
        android:text="@string/cancel_trip" />

    <Button
        android:id="@+id/start_trip_button"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="118dp"
        android:layout_marginEnd="122dp"
        android:background="@color/lightGreen"
        android:layout_marginBottom="25dp"
        android:text="@string/start_trip" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/time_text_view"
        app:srcCompat="@drawable/ic_access_time_black_24dp" />

    <TextView
        android:id="@+id/driver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_text_view"
        android:layout_alignStart="@+id/date_text_view"
        android:layout_marginStart="1dp"
        android:layout_marginTop="35dp"
        android:text="@string/driver" />

    <TextView
        android:id="@+id/driver_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/driver"
        android:layout_alignStart="@+id/driver"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="driver-name" />

    <ImageView
        android:id="@+id/car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/driver"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/driver_text_view"
        app:srcCompat="@drawable/ic_directions_car_black_24dp" />

    <TextView
        android:id="@+id/passengers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/driver_text_view"
        android:layout_alignStart="@+id/driver_text_view"
        android:layout_marginStart="0dp"
        android:layout_marginTop="35dp"
        android:text="@string/passengers" />

    <TextView
        android:id="@+id/passenger_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passengers"
        android:layout_alignStart="@+id/passengers"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="TextView" />

    <ImageView
        android:id="@+id/passengerIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passengers"
        android:layout_marginStart="80dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/passenger_text_view"
        app:srcCompat="@drawable/ic_person_black_24dp" />

    <TextView
        android:id="@+id/number_of_booked_seats_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passengers"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/passengerIcon"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="3" />

    <TextView
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passengers"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/number_of_booked_seats_text_view"
        android:text="/"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/total_number_of_seats_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passengers"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/divider"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="4" />

    <RatingBar
        android:id="@+id/driver_rating_bar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_text_view"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="87dp"
        android:isIndicator="true" />


</RelativeLayout>